<fieldset>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, autocomplete: :off, list: :item_names %>
  </div>

  <div class="field">
    <%= form.label :price_cents %>
    <%= form.number_field :price_cents %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1, value: 1 %>
  </div>

  <%= form.hidden_field :_destroy %>
  <%= link_to "Remove", "#", class: "remove_fields danger" %>
</fieldset>
